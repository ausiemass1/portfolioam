
<h2>Welcome to the Home Page!</h2>
<p>This content comes from the home view.</p>



<div class="row">
  <% products.forEach(product => { %>
<div class="col s12 m6 l4">
  <div class="card blue-grey darken-1">

    <!-- Product Image -->
    <div class="card-image waves-effect waves-block waves-light">
      <img
        class="activator"
        src="<%= product.images[0] %>"
        alt="<%= product.name %>"
      >
    </div>

    <!-- Fixed Card Content -->
    <div class="card-content white-text">
      <span class="card-title activator">
        <%= product.name %>
        <i class="material-icons right">more_vert</i>
      </span>

      <!-- Short preview (keeps height consistent) -->
      <p class="truncate">
        <%= product.description %>
      </p>

      <p class="right-align">
        <strong>$<%= product.price.toFixed(2) %></strong>
      </p>
    </div>

    <!-- Card Reveal (slides over card) -->
    <div class="card-reveal blue-grey darken-1 white-text">
      <span class="card-title">
        <%= product.name %>
        <i class="material-icons right">close</i>
      </span>

      <p><%= product.description %></p>

      <div class="divider"></div>

      <div class="card-action">
        <a href="/products/<%= product._id %>">View Details</a>
        <a href="/cart/add/<%= product._id %>" class="teal-text">
          Add to Cart
        </a>
      </div>
    </div>

  </div>
</div>
<% }) %>
</div>


